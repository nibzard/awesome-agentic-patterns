---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PatternSource from '../../components/PatternSource.astro';

interface Props {
  slug: string;
}

const { slug } = Astro.params;

// For now, show a placeholder until data pipeline is implemented
---

<BaseLayout title={`${slug} - Pattern`}>
  <div class="pattern-page">
    <div class="pattern-placeholder">
      <h1>Pattern: {slug}</h1>
      <p>This pattern page will be populated once the data pipeline is implemented.</p>

      <div class="pattern-placeholder-info">
        <h2>What's Coming</h2>
        <ul>
          <li>Pattern title, summary, and description</li>
          <li>Problem and solution sections</li>
          <li>Example diagrams and code</li>
          <li>Related patterns and references</li>
          <li>Citation functionality</li>
        </ul>

        <a href="/patterns" class="back-link">← Back to Patterns</a>
      </div>

      <!-- Sample source block rendering -->
      <PatternSource source="https://example.com/patterns/sample-pattern" />
    </div>
  </div>
</BaseLayout>

<style>
  .pattern-page {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .pattern-placeholder {
    text-align: center;
  }

  .pattern-placeholder h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
  }

  .pattern-placeholder > p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-xl);
  }

  .pattern-placeholder-info {
    padding: var(--spacing-xl);
    background-color: var(--color-border);
    border-radius: var(--radius-lg);
    text-align: left;
    margin-bottom: var(--spacing-xl);
  }

  .pattern-placeholder-info h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
  }

  .pattern-placeholder-info ul {
    list-style: none;
    padding: 0;
  }

  .pattern-placeholder-info li {
    padding: var(--spacing-sm) 0;
    color: var(--color-text-muted);
    padding-left: var(--spacing-lg);
    position: relative;
  }

  .pattern-placeholder-info li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: 600;
  }

  .back-link {
    display: inline-block;
    margin-top: var(--spacing-lg);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
