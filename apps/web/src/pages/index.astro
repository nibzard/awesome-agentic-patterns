---
import BaseLayout from '../layouts/BaseLayout.astro';
import PatternCard from '../components/PatternCard.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import type { PatternEntry } from '../types';
import { getAllPatterns } from '../lib/patterns';

// Load patterns data
const patterns = (await getAllPatterns()) as PatternEntry[];

// Get new patterns (last 7 days)
const sevenDaysAgo = new Date();
sevenDaysAgo.setDate(sevenDaysAgo.getDate() - 7);

const newPatterns = patterns
  .filter((p: PatternEntry) => {
    if (!p.updated_at) return false;
    const updatedDate = new Date(p.updated_at);
    return updatedDate >= sevenDaysAgo;
  })
  .sort((a: PatternEntry, b: PatternEntry) => {
    const dateA = new Date(a.updated_at || 0);
    const dateB = new Date(b.updated_at || 0);
    return dateB.getTime() - dateA.getTime();
  })
  .slice(0, 5);

// Get recently updated patterns (last 30 days, excluding patterns from last 7 days)
const thirtyDaysAgo = new Date();
thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);

const recentlyUpdated = patterns
  .filter((p: PatternEntry) => {
    if (!p.updated_at) return false;
    const updatedDate = new Date(p.updated_at);
    // Include patterns from 8-30 days ago (exclude last 7 days)
    return updatedDate >= thirtyDaysAgo && updatedDate < sevenDaysAgo;
  })
  .sort((a: PatternEntry, b: PatternEntry) => {
    const dateA = new Date(a.updated_at || 0);
    const dateB = new Date(b.updated_at || 0);
    return dateB.getTime() - dateA.getTime();
  })
  .slice(0, 5);

// Get featured patterns (randomly selected)
let featuredPatterns = [...patterns];

// Fisher-Yates shuffle for random selection
for (let i = featuredPatterns.length - 1; i > 0; i--) {
  const j = Math.floor(Math.random() * (i + 1));
  [featuredPatterns[i], featuredPatterns[j]] = [featuredPatterns[j], featuredPatterns[i]];
}

featuredPatterns = featuredPatterns.slice(0, 6);
---

<BaseLayout title="Awesome Agentic Patterns">
  <div class="home-hero">
    <h1 class="home-title">Agentic Patterns</h1>
    <p class="home-subtitle">
      A curated catalogue of AI agent design patterns to help you build better AI systems.
    </p>
    <div class="home-cta">
      <a href="/patterns" class="button button--primary">Browse Patterns</a>
    </div>
  </div>

  <div class="home-section">
    <h2 class="home-section-title">Featured Patterns</h2>
    <p class="home-section-description">
      Explore our hand-picked selection of essential AI agent patterns.
    </p>
    {
      featuredPatterns.length > 0 ? (
        <div class="home-patterns-grid">
          {featuredPatterns.map((pattern: PatternEntry) => (
            <PatternCard
              title={pattern.title}
              slug={pattern.slug}
              summary={pattern.summary}
              status={pattern.status}
              category={pattern.category}
              tags={pattern.tags}
            />
          ))}
        </div>
      ) : (
        <div class="home-patterns-placeholder">
          <a href="/patterns" class="home-patterns-link">
            View All Patterns â†’
          </a>
        </div>
      )
    }
  </div>

  <div class="home-section">
    <h2 class="home-section-title">Quick Start</h2>
    <div class="home-cards">
      <a href="/patterns?category=Orchestration%20%26%20Control" class="home-card">
        <h3>Orchestration & Control</h3>
        <p>Patterns for managing agent workflows and decision-making processes.</p>
      </a>
      <a href="/patterns?category=Feedback%20Loops" class="home-card">
        <h3>Feedback Loops</h3>
        <p>Self-improvement and evaluation patterns for AI agents.</p>
      </a>
      <a href="/patterns?category=Security%20%26%20Safety" class="home-card">
        <h3>Security & Safety</h3>
        <p>Patterns for building secure and reliable AI systems.</p>
      </a>
    </div>
  </div>

  <div class="home-section">
    <NewsletterCTA
      variant="banner"
      title="Stay in the Loop"
      description="Get notified when we add new patterns or publish guides. No spam, just updates."
      buttonText="Subscribe"
    />
  </div>

  {
    (newPatterns.length > 0 || recentlyUpdated.length > 0) && (
      <div class="home-two-column-grid">
        {newPatterns.length > 0 && (
          <div class="home-section">
            <h2 class="home-section-title">
              <span class="section-badge section-badge--new">New</span>
              New Patterns
            </h2>
            <p class="home-section-description">Freshly added patterns from the last 7 days.</p>
            <div class="home-patterns-list">
              {newPatterns.map((pattern: PatternEntry) => (
                <a href={`/patterns/${pattern.slug}`} class="home-pattern-item">
                  <span class="pattern-badge pattern-badge--new">New</span>
                  <div class="pattern-info">
                    <div class="pattern-title">{pattern.title}</div>
                    <div class="pattern-meta">
                      <span class="pattern-category">{pattern.category}</span>
                      {pattern.updated_at && (
                        <span class="pattern-date">
                          {new Date(pattern.updated_at).toLocaleDateString()}
                        </span>
                      )}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        {recentlyUpdated.length > 0 && (
          <div class="home-section">
            <h2 class="home-section-title">
              <span class="section-badge section-badge--updated">Updated</span>
              Recently Updated
            </h2>
            <p class="home-section-description">
              Patterns that have been improved or expanded in the last 30 days.
            </p>
            <div class="home-patterns-list">
              {recentlyUpdated.map((pattern: PatternEntry) => (
                <a href={`/patterns/${pattern.slug}`} class="home-pattern-item">
                  <span class="pattern-badge pattern-badge--updated">Updated</span>
                  <div class="pattern-info">
                    <div class="pattern-title">{pattern.title}</div>
                    <div class="pattern-meta">
                      <span class="pattern-category">{pattern.category}</span>
                      {pattern.updated_at && (
                        <span class="pattern-date">
                          {new Date(pattern.updated_at).toLocaleDateString()}
                        </span>
                      )}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    )
  }
</BaseLayout>

<style>
  .home-hero {
    text-align: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
    max-width: 800px;
    margin: 0 auto;
  }

  .home-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
    line-height: 1.1;
  }

  .home-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .home-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-sm) var(--spacing-xl);
    border-radius: var(--radius-md);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .button--primary {
    background-color: var(--color-primary);
    color: white;
  }

  .button--primary:hover {
    background-color: var(--color-primary-hover);
  }

  .home-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .home-section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
    text-align: center;
  }

  .home-section-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .home-patterns-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
  }

  .home-patterns-placeholder {
    text-align: center;
    padding: var(--spacing-xl);
  }

  .home-patterns-link {
    color: var(--color-primary);
    font-size: 1.125rem;
    font-weight: 500;
    text-decoration: none;
  }

  .home-patterns-link:hover {
    text-decoration: underline;
  }

  .home-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
  }

  .home-two-column-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
    align-items: start;
  }

  .home-two-column-grid .home-section {
    max-width: none;
    margin: 0;
  }

  .home-card {
    padding: var(--spacing-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background-color: var(--color-bg);
    text-decoration: none;
    transition:
      border-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .home-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .home-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .home-card p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .home-section-title {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    justify-content: center;
  }

  .section-badge {
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .section-badge--new {
    background-color: #10b981;
    color: white;
  }

  .section-badge--updated {
    background-color: #3b82f6;
    color: white;
  }

  .home-patterns-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .home-pattern-item {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .home-pattern-item:hover {
    border-color: var(--color-primary);
    transform: translateX(-4px);
  }

  .pattern-badge {
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    flex-shrink: 0;
  }

  .pattern-badge--new {
    background-color: #10b981;
    color: white;
  }

  .pattern-badge--updated {
    background-color: #3b82f6;
    color: white;
  }

  .pattern-info {
    flex: 1;
    min-width: 0;
  }

  .pattern-title {
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
  }

  .pattern-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.8125rem;
  }

  .pattern-category {
    color: var(--color-text-muted);
  }

  .pattern-date {
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .home-title {
      font-size: 2rem;
    }

    .home-subtitle {
      font-size: 1rem;
    }

    .home-cta {
      flex-direction: column;
    }

    .button {
      width: 100%;
      justify-content: center;
    }

    .home-two-column-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
