---
import NewsletterCTA from './NewsletterCTA.astro';

const currentYear = new Date().getFullYear();

const footerSections = [
  {
    title: 'Resources',
    links: [
      { href: '/patterns', label: 'Patterns' },
      { href: '/graph', label: 'Graph' },
      { href: '/packs', label: 'Packs' },
      { href: '/guides', label: 'Guides' },
    ],
  },
  {
    title: 'Community',
    links: [
      { href: 'https://github.com/nibzard/awesome-agentic-patterns', label: 'GitHub' },
      { href: 'https://discord.gg/agentic-patterns', label: 'Discord' },
      { href: 'https://x.com/nibzard', label: 'Twitter' },
    ],
  },
  {
    title: 'Legal',
    links: [
      { href: '/privacy', label: 'Privacy Policy' },
      { href: '/terms', label: 'Terms of Service' },
      { href: '/contribute', label: 'Contribute' },
    ],
  },
];
---

<footer class="footer">
  <div class="footer-container">
    <!-- Left: Brand + Newsletter -->
    <div class="footer-brand-section">
      <div class="footer-brand">
        <svg
          width="24"
          height="24"
          viewBox="0 0 32 32"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <rect width="32" height="32" rx="6" fill="currentColor"></rect>
          <path
            d="M10 16L14 12L18 16L22 12"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M10 22L14 18L18 22L22 18"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
        <div>
          <p class="footer-title">Agentic Patterns</p>
          <p class="footer-tagline">A curated catalogue of AI agent design patterns.</p>
        </div>
      </div>

      <NewsletterCTA variant="minimal" title="" description="" buttonText="Subscribe" />
    </div>

    <!-- Right: Three column menu -->
    <div class="footer-links">
      {
        footerSections.map((section) => (
          <div class="footer-section">
            <h3 class="footer-section-title">{section.title}</h3>
            <ul class="footer-section-links">
              {section.links.map((link) => (
                <li>
                  <a href={link.href} class="footer-link">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>

  <div class="footer-bottom">
    <p class="footer-copyright">
      &copy; {currentYear} Awesome Agentic Patterns. All rights reserved.
    </p>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    background-color: var(--color-bg);
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-2xl) var(--spacing-lg);
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--spacing-2xl);
    align-items: start;
  }

  .footer-brand-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .footer-brand {
    display: flex;
    gap: var(--spacing-sm);
    align-items: flex-start;
  }

  .footer-brand svg {
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .footer-title {
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .footer-tagline {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.4;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  .footer-section-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-section-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .footer-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.8125rem;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-md) var(--spacing-lg);
    border-top: 1px solid var(--color-divider);
  }

  .footer-copyright {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 900px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .footer-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 600px) {
    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .footer-section-links {
      gap: var(--spacing-xs);
    }
  }
</style>
